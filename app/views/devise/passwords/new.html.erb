<h1>Forgot Your Password?</h1>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %><br/>
  
  <%= f.input :email, label: 'E-mail', :input_html => { :class => "input-name" } %>

<div class="form-actions">
  <%= f.submit "Send Me Reset Password Instructions", class: "btn btn-primary btn-small" %>
<% end %>
</div>

<%= render "devise/shared/links" %>

