<div id="logo" class="well well-small">
  <h2>
    <%= image_tag("LOGO.jpg") %>
  </h2>
</div>
  
  <h1>Update Profile</h1><br/>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :current_password, :input_html => { :class => "input-name" }, :autofocus => true %>
  <%= f.input :password, :input_html => { :class => "input-name" }, label: "New Password <br/> (Min. 8 characters)", autocomplete: "off" %>
  <%= f.input :password_confirmation, :input_html => { :class => "input-name" }, label: "New Password Confirmation", autocomplete: "off" %>
  <%= f.input :email, :input_html => { :class => "input-name" }, label: "E-mail Address" %>

  <div class="form-actions">
      <%= f.submit "Update", class: "btn btn-primary btn-small" %>
  </div>
<% end %>


