<%= simple_form_for(@review, :html => { class: 'form-horizontal' }, :method => :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, input_html: { :class => "input-name" } %>

  	<%= f.input :review, as: :text, label: 'Review', input_html: { rows: "4", :class => "input-name" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-small"  %>
  </div>
<% end %>
