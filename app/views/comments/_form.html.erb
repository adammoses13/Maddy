<% if false %>

<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

<%= f.input :name, as: :text, label: 'Name', input_html: { rows: "1" } %>
<%= f.input :body, as: :text, label: 'Comment', input_html: { rows: "4" } %>
<%= f.input :audio, label: 'Upload Audio file' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-small" %>
  </div>
<% end %>


<% end %>