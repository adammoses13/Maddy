<tr>
	 	
 	<td style="vertical-align:middle" ><%= product.product %></td>
  <td style="text-align:center; vertical-align:middle" ><%= product.description %></td>
  <td style="text-align:center; vertical-align:middle" ><%= product.unitprice %></td>
  <td style="text-align:center; vertical-align:middle" ><%= product.totalprice %></td>
  <td style="text-align:center; vertical-align:middle" ><script src='assets/paypal-button.min.js/?merchant=TF3CUUVND9NSA'
		    data-button="buynow" 
		    data-name="<%= product.product %>" 
		    data-amount="<%= product.totalprice %>" 
		    data-currency="USD" 
		    ></script></td>

  <% if current_user.try(:admin?) %>
	  <td><%= link_to 'Edit', edit_product_path(product) %></td>
	  <td><%= link_to 'Delete', product, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>

</tr>